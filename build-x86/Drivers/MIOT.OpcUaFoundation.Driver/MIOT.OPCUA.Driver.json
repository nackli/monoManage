{
  "className": "MIOT.OPCUA.Driver",
  "driverDesc": "OPCUA协议驱动包",
  "parentName": "OPC",
  "version": "1.1.0",
  "protocols": [
    {
      "protocolName": "OPC UA",
      "tagSource": 0,
      "connectParam": [
        {
          "name": "address",
          "desc": "端点URL",
          "formType": "input",
          "required": true,
          "default_value": "opc.tcp://127.0.0.1:49320"
        },
        {
          "name": "timeout",
          "desc": "连接超时(毫秒)",
          "formType": "input",
          "required": true,
          "default_value": "5000"
        },
        {
          "name": "readMode",
          "desc": "读取方式",
          "formType": "select",
          "required": true,
          "default_value": "3",
          "option": [
            {
              "value": "3",
              "label": "批量"
            },
            {
              "value": "2",
              "label": "订阅"
            },
            {
              "value": "1",
              "label": "单点"
            }
          ]
        },
        {
          "name": "username",
          "desc": "用户名",
          "formType": "input",
          "required": false
        },
        {
          "name": "password",
          "desc": "密码",
          "formType": "input",
          "required": false
        },
        {
          "name": "securityPolicy",
          "desc": "安全策略",
          "formType": "select",
          "required": true,
          "default_value": "None",
          "option": [
            {
              "value": "None",
              "label": "无"
            },
            {
              "value": "Basic128Rsa15",
              "label": "Basic128Rsa15"
            },
            {
              "value": "Basic256",
              "label": "Basic256"
            },
            {
              "value": "Basic256Sha256",
              "label": "Basic256Sha256"
            },
            {
              "value": "Aes128_Sha256_RsaOaep",
              "label": "Aes128_Sha256_RsaOaep"
            },
            {
              "value": "Aes256_Sha256_RsaPss",
              "label": "Aes256_Sha256_RsaPss"
            }
          ]
        },
        {
          "name": "securityMode",
          "desc": "消息模式",
          "formType": "select",
          "required": true,
          "default_value": "None",
          "option": [
            {
              "value": "None",
              "label": "无"
            },
            {
              "value": "Sign",
              "label": "签名"
            },
            {
              "value": "Sign&Encrypt",
              "label": "签名与加密"
            }
          ]
        }
      ]
    }  

  ]
}